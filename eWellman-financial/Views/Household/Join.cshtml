@model eWellman_financial.Models.Class_Models.Household
@{
    ViewBag.Title = "Join";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Join", "Household", FormMethod.Post, new { id = "createForm" })) {
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Create a new Household</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<label for="title" class="form-control-label">House Name</label>
			<div class="row">
				<div class="col-md-3">
					@Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", style = "padding-right:20px;" } })
					@Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group">
			<label for="housePassword" class="form-control-label">House Password</label>
			<div class="col-md-3">
				@Html.Password("housePassword", null, new { @class = "form-control"})
				@Html.ValidationMessage("housePassword", "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" id="CreateFormSubmit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
}
